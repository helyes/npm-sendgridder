    "test:watch": "jest --config jestconfig.json --watch"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^10.17.0",
    "dotenv": "^8.2.0",
    "jest": "^24.9.0",
    "nyc": "^14.1.1",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "ts-mockito": "^2.5.0",
    "ts-node": "^8.5.2",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.2"
  },
  "files": [
    "lib/**/*"
  ]
