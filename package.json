{
  "name": "@helyes/sendgridder",
  "version": "0.2.0",
  "description": "Sendgrid transactional email trigger",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "helyes <helyesa@gmail.com>",
  "keywords": [
    "Sendgrid",
    "Transactional"
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
